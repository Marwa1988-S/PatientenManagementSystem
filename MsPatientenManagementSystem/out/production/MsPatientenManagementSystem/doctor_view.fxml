<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox prefHeight="305.0" prefWidth="359.0" xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="de.msaada.maingui.UiController">
   <children>
      <Label fx:id="lblAppointment" alignment="CENTER" text="Neuer Termin einlegen">
         <font>
            <Font size="14.0" />
         </font>
         <VBox.margin>
            <Insets left="40.0" top="5.0" />
         </VBox.margin>
      </Label>
      <HBox prefHeight="41.0" prefWidth="359.0">
         <children>
            <TextField fx:id="txtPatientFName" promptText="Patient Vorname">
               <font>
                  <Font size="14.0" />
               </font>
               <HBox.margin>
                  <Insets left="40.0" right="5.0" />
               </HBox.margin>
            </TextField>
            <TextField fx:id="txtPatientLName" promptText="Patient Nachname">
               <font>
                  <Font size="14.0" />
               </font>
               <HBox.margin>
                  <Insets left="5.0" />
               </HBox.margin>
            </TextField>
         </children>
         <VBox.margin>
            <Insets bottom="10.0" right="5.0" top="10.0" />
         </VBox.margin>
      </HBox>
      <HBox prefHeight="22.0" prefWidth="415.0">
         <children>
            <DatePicker fx:id="dpAppointmentDate">
               <HBox.margin>
               <Insets left="40.0" right="5.0" />
            </HBox.margin>
            </DatePicker>
            <TextField fx:id="txtTime" promptText="--:-- Uhr">
               <font>
                  <Font size="14.0" />
               </font>
               <HBox.margin>
                  <Insets left="5.0" />
               </HBox.margin>
            </TextField>
         </children>
      </HBox>
      <Button fx:id="btnAddnewAppointment" alignment="CENTER" minWidth="175.0" mnemonicParsing="false" onAction="#saveNewAppointment" text="Ok">
         <VBox.margin>
            <Insets left="40.0" right="200.0" />
         </VBox.margin>
      </Button>
      <Label fx:id="lblAllAppointments">
         <font>
            <Font size="14.0" />
         </font>
      </Label>
      <Button mnemonicParsing="false" onAction="#showAllAppointments" text="Alle Termine">
         <VBox.margin>
            <Insets bottom="5.0" top="5.0" />
         </VBox.margin>
      </Button>
      <ListView fx:id="lvAppointments" onMouseClicked="#getListViewAppointmentItem" prefHeight="200.0" prefWidth="200.0" />
      <Hyperlink fx:id="hlNeuerPatient" onAction="#changeToAddPatientView" text="Patient einlegen">
         <font>
            <Font size="13.0" />
         </font>
         <VBox.margin>
            <Insets left="40.0" />
         </VBox.margin>

      </Hyperlink>
      <Hyperlink fx:id="hlAllPatients" onAction="#changeToAllPatientsView" text="Alle Patienten zeigen ">
         <VBox.margin>
            <Insets left="40.0" />
         </VBox.margin></Hyperlink>
      <Hyperlink alignment="BOTTOM_RIGHT" contentDisplay="RIGHT" onAction="#switchBackToLoggedInScreen" text="Abmelden">
         <font>
            <Font size="14.0" />
         </font>
         <VBox.margin>
            <Insets bottom="10.0" left="5.0" />
         </VBox.margin>
      </Hyperlink>
   </children>
   <padding>
      <Insets left="5.0" right="5.0" />
   </padding>
</VBox>
