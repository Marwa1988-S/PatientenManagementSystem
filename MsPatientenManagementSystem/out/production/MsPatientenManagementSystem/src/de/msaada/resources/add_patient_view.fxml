<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox prefHeight="260.0" prefWidth="232.0" xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="de.msaada.maingui.UiController">
   <children>
      <Label text="Patient Daten">
         <font>
            <Font size="14.0" />
         </font>
         <VBox.margin>
            <Insets left="30.0" />
         </VBox.margin></Label>
      <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
         <children>
            <TextField fx:id="txtPatientFName" promptText="Patient Vorname">
               <font>
                  <Font size="14.0" />
               </font></TextField>
            <TextField fx:id="txtPatientLName" promptText="Patient Nachname">
               <font>
                  <Font size="14.0" />
               </font></TextField>
         </children>
         <padding>
            <Insets left="20.0" right="20.0" />
         </padding>
      </HBox>
      <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
         <children>
            <TextField fx:id="txtGender" promptText="Geschlecht">
               <font>
                  <Font size="14.0" />
               </font></TextField>
            <TextField fx:id="txtWeight" promptText="Gewicht">
               <font>
                  <Font size="14.0" />
               </font></TextField>
         </children>
         <padding>
            <Insets left="20.0" right="20.0" />
         </padding>
      </HBox>
      <Label text="Medizinische Daten">
         <VBox.margin>
            <Insets left="30.0" />
         </VBox.margin></Label>
      <TextArea fx:id="txtMHistory" prefHeight="200.0" prefWidth="200.0" promptText="Krankengeschichte">
         <VBox.margin>
            <Insets left="20.0" right="20.0" />
         </VBox.margin></TextArea>
      <TextArea fx:id="txtDiseases" prefHeight="200.0" prefWidth="200.0" promptText="Aktuelle Erkrankungen">
         <VBox.margin>
            <Insets left="20.0" right="20.0" />
         </VBox.margin></TextArea>
      <TextArea fx:id="txtAllergies" prefHeight="200.0" prefWidth="200.0" promptText="Allergien">
         <VBox.margin>
            <Insets left="20.0" right="20.0" />
         </VBox.margin></TextArea>
      <TextArea fx:id="txtVaccination" prefHeight="200.0" prefWidth="200.0" promptText="Impfstatus">
         <VBox.margin>
            <Insets left="20.0" right="20.0" />
         </VBox.margin></TextArea>
      <VBox prefHeight="200.0" prefWidth="100.0">
         <children>
            <Label text="Patient Zugangsdaten">
               <VBox.margin>
                  <Insets left="10.0" />
               </VBox.margin>
            </Label>
            <TextField fx:id="txtUserName" promptText="user name">
               <font>
                  <Font size="14.0" />
               </font></TextField>
            <PasswordField fx:id="txtUserPw" promptText="pass word">
               <font>
                  <Font size="14.0" />
               </font></PasswordField>
            <Label fx:id="lblAngelegt">
               <font>
                  <Font size="14.0" />
               </font>
            </Label>
            <Label fx:id="lblUserMsg" text="Label" />
            <HBox prefHeight="100.0" prefWidth="200.0">
               <children>
                  <Button fx:id="btnAddnewPatient" alignment="CENTER" minWidth="200.0" mnemonicParsing="false" onAction="#saveNewPatient" text="ok">
                     <font>
                        <Font size="14.0" />
                     </font>
                  </Button>
                  <Hyperlink fx:id="hlBack" onAction="#backToDoctorView" text="Back" />
               </children>
            </HBox>
         </children>
         <VBox.margin>
            <Insets bottom="10.0" left="20.0" right="20.0" />
         </VBox.margin>
      </VBox>
   </children>
</VBox>
